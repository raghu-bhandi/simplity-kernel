<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<service
	xmlns="http://www.simplity.org/schema"
	name="fileBackground"
	dbAccessType="none"
	executeInBackground="true"
	backgroundRunInterval="5"
	description="This service is fired in the background. 
	It is run repeatedly using the interval in seconds."
>
	<actions>
		<fileProcessor
			inFolderName="c:/temp/test/in2"
			fileNamePattern=".*\.txt"
			archivalExtension=".bak"
			recordName="fixed"
			sheetName="orders"
			actionName="fileProcessor"
			fileHasEndOfLineChars="true"
		>
			<actions>
				<setValue
					fieldName="number"
					fieldValue="99"
				></setValue>
				<log names="orders" />
				<loop
					dataSheetName="orders"
					columnsToCopyAsFields="date"
					fieldsToCopyBackAsColumns="*"
				>
					<actions>
						<setValue
							fieldName="text"
							expression="orders.text + orders.number" />
						<setValue
							fieldName="number"
							expression="orders.number + orders.decimal" />
						<setValue
							fieldName="decimal"
							expression="orders.decimal * orders.number" />
						<setValue
							fieldName="bool"
							expression="!orders.bool" />
						<log names="date" />
						<setValue
							fieldName="date"
							expression="date + 100" />
						<log names="date" />
					</actions>
				</loop>
				<log names="number" />
			</actions>
		</fileProcessor>
	</actions>
	<outputData dataSheets="orders" />
</service>
