<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<record
	xmlns="http://www.simplity.org/schema"
	name="petDetails"
	tableName="PET_DETAILS"
	recordType="view"
	defaultRefRecord="pets"	
	childrenToBeRead="visits"
>
	<fields>
		<field
			name="petId"
			columnName="pet_id"
			fieldType="primaryKey"
			 />
		<field
			name="ownerId"
			fieldType="parentKey"
			referredRecord="owners"
			columnName="owner_id"
			 />
		<field
			name="petName"
			columnName="pet_name"
			/>
		<field
			name="petDob"
			columnName="birth_date"
			dataType="date"
			 />
		<field
			name="petTypeId"
			columnName="type_id"
			 />
		<field
			name="petType"
			columnName="pet_type"
			referredRecord="petTypes"
			 />
		<field
			name="firstName"
			columnName="first_name"
			referredRecord="owners"/>
		<field
			name="lastName"
			columnName="last_name"
			referredRecord="owners" />
	</fields>
</record>
